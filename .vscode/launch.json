{
    "configurations": [
        {
            "type": "node",
            "name": "Jest watch current file",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": [
                "${relativeFile}",
                "-c",
                "./jest.config.js",
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll",
                "--coverage",
                "false"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "windows": {
                "program": "${workspaceFolder}/node_modules/jest/bin/jest"
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "get-translation:src/app.handler (nodejs14.x)",
            "invokeTarget": {
                "target": "code",
                "projectRoot": "${workspaceFolder}/src/get-translation",
                "lambdaHandler": "src/app.handler"
            },
            "lambda": {
                "runtime": "nodejs14.x",
                "payload": {
                    "path": "${workspaceFolder}/events/getTranslation.json"
                },
                "environmentVariables": {
                    "TRANSLATE_TABLE": "CdkDayStack-TranslateTable1ABF9811-PA3E8Y1FWAO0"
                }
            },
            "aws": {
                "credentials": "profile:personal"
            }
        }
    ]
}